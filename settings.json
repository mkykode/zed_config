// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": "One Dark",
  "buffer_font_size": 14,
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 15000
    }
  },
  "buffer_font_family": "Fira Code",
  "vim_mode": true,
  "soft_wrap": "preferred_line_length",
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono",
    "blinking": "off"
  },
  "default_dock_anchor": "expanded",
  "language_overrides": {
    "JavaScript": {
      "command": "prettier",
      "arguments": [
        "--stdin-filepath",
        "{buffer_path}"
      ]
    },
    "TypeScript": {
      "command": "prettier",
      "arguments": [
        "--stdin-filepath",
        "{buffer_path}"
      ]
    },
    "PHP": {
      "command": "php-cs-fixer",
      "arguments": [
        "fix",
        "{buffer_path}"
      ]
    },
    "CSS": {
      "command": "prettier",
      "arguments": [
        "--stdin-filepath",
        "{buffer_path}"
      ]
    },
    "SCSS": {
      "command": "prettier",
      "arguments": [
        "--stdin-filepath",
        "{buffer_path}"
      ]
    },
    "JSON": {
      "command": "prettier",
      "arguments": [
        "--stdin-filepath",
        "{buffer_path}"
      ]
    }
  }
}
