{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "sidebar": {
    "show_hidden_files": true
  },
  "theme": {
    "light": "One Dark Pro",
    "dark": "One Dark Pro"
  },
  "buffer_font_size": 18.0,
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },
  "autosave": "on_focus_change",
  "buffer_font_family": "Monaspace Neon Var",
  "ui_font_family": "Monaspace Neon Var",
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": false,
    "use_multiline_find": true,
    "use_system_clipboard": "always"
  },
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },
  "ui_font_features": {
    "calt": true,
    "liga": true
  },
  "relative_line_numbers": true,
  "project_panel": {
    "dock": "right"
  },
  "auto_update": true,
  "auto_save": "on",
  "terminal": {
    "font_family": "MesloLGS NF",
    "font_size": 18
  },
  "default_dock_anchor": "expanded",
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "language_models": {
    "google": {
      "version": "1",
      "available_models": [
        {
          "name": "gemini-2.0-flash-exp",
          "display_name": "Gemini Flash 2.0 exp",
          "max_tokens": 1048576
        },
        {
          "name": "gemini-1.5-pro",
          "display_name": "Gemini Flash 1.5 Pro",
          "max_tokens": 2000000
        },
        {
          "name": "gemini-exp-1206",
          "display_name": "Gemini EXP 1206",
          "max_tokens": 2097152
        },
        {
          "name": "gemini-2.0-flash-thinking-exp-01-21",
          "display_name": "Gemini Flash Thinking",
          "max_tokens": 1048576
        }
      ]
    }
  },
  "format_on_save": "on",
  "soft_wrap": "preferred_line_length",
  "show_wrap_guides": true,
  "wrap_guides": [100, 120],
  "tabs": {
    "file_icons": true
  },
  "lsp": {
    "solargraph": {
      "settings": {
        "use_bundler": false
      },
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
  },
  "languages": {
    "JavaScript": {
      "formatter": "prettier"
    },
    "TypeScript": {
      "formatter": "prettier"
    },
    "JSX": {
      "formatter": "prettier"
    },
    "TSX": {
      "formatter": "prettier"
    },
    "CSS": {
      "formatter": "prettier"
    },
    "SCSS": {
      "formatter": "prettier"
    },
    "HTML": {
      "formatter": "prettier"
    },
    "JSON": {
      "formatter": "prettier"
    },
    "YAML": {
      "formatter": "prettier"
    },
    "Markdown": {
      "formatter": "prettier"
    },
    "Ruby": {
      "language_servers": ["solargraph", "!ruby-lsp", "!rubocop"],
      "formatter": "language_server"
    },
    "PHP": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}", "--parser", "php"]
        }
      }
    },
    "Rust": {
      "formatter": {
        "external": {
          "command": "rustfmt",
          "arguments": ["--emit", "stdout"]
        }
      }
    },
    "Liquid": {
      "formatter": "prettier"
    }
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.5
  },
  "auto_indent_on_paste": false,
  "slash_commands": {
    "docs": {
      "enabled": true
    }
  },
  "preview_tabs": {
    "enabled": true
  }
}
