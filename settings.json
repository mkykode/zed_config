// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "sidebar": {
    "show_hidden_files": true
  },
  "theme": {
    "light": "One Dark Pro",
    "dark": "One Dark Pro"
  },
  "buffer_font_size": 14,
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 200
    }
  },
  "buffer_font_family": "Monaspace Neon Var",
  "ui_font_family": "Monaspace Neon Var",
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": false,
    "use_multiline_find": true,
    "use_system_clipboard": "always"
  },
  "vertical_scroll_margin": 0,
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },
  "ui_font_features": {
    "calt": true,
    "liga": true
  },
  "relative_line_numbers": true,
  "project_panel": {
    "dock": "right"
  },
  "auto_update": true,
  "auto_save": "on",
  "terminal": {
    "font_family": "MesloLGS NF",
    "font_size": 13
  },
  "default_dock_anchor": "expanded",
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "language_models": {
    "google": {
      "version": "1",
      "available_models": [
        {
          "name": "gemini-2.0-flash-exp",
          "display_name": "Gemini Flash 2.0 exp",
          "max_tokens": 1048576
        },
        {
          "name": "gemini-1.5-pro",
          "display_name": "Gemini Flash 1.5 Pro",
          "max_tokens": 2000000
        },
        {
          "name": "gemini-exp-1206",
          "display_name": "Gemini EXP 1206",
          "max_tokens": 2097152
        }
      ]
    }
  },
  "formatter": "prettier",
  "format_on_save": "on",
  "soft_wrap": "preferred_line_length",
  // The column at which to soft-wrap lines, for buffers where soft-wrap
  // is enabled.
  // "preferred_line_length": 100, // You can set this to 120 if you prefer
  // Whether to show wrap guides (vertical rulers) in the editor.
  // Setting this to true will show a guide at the 'preferred_line_length' value
  // if softwrap is set to 'preferred_line_length', and will show any
  // additional guides as specified by the 'wrap_guides' setting.
  "show_wrap_guides": true,
  // Character counts at which to show wrap guides in the editor.
  "wrap_guides": [100, 120],
  "prettier": {
    "allowed": true
  },
  "tabs": {
    "file_icons": true
  },
  "languages": {
    "PHP": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}", "--parser", "php"]
        }
      }
    },
    "Rust": {
      "formatter": {
        "external": {
          "command": "rustfmt",
          "arguments": ["--emit", "stdout"]
        }
      }
    }
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.5
  },
  "auto_indent_on_paste": false,
  "slash_commands": {
    "docs": {
      "enabled": true
    }
  },
  "preview_tabs": {
    "enabled": true
  }
}
